<Window x:Class="Tomra_Test_System.ProductSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tomra_Test_System"
        mc:Ignorable="d"
        Title="ProductSelect" Height="300" Width="300"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Closed="ProductSelectClose"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ListBox Name="LbProduct">
            <ListBox.Template>
                <ControlTemplate TargetType="ListBox">
                    <WrapPanel  Orientation="Vertical" IsItemsHost="True"/>
                </ControlTemplate>
            </ListBox.Template>

            <ListBox.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Height" Value="20"/>
                </Style>
            </ListBox.Resources>

        </ListBox>

        <Button Name="BtnOk"
                Grid.Row="1"
                Width="80"
                Height="30"
                Content="OK" Click="BtnOk_Click"/>

    </Grid>
</Window>
